<schemalist>
  <schema id="apps.scopy" path="/apps/scopy/" gettext-domain="scopy">

    <key name="player-name" type="s">
      <default l10n="messages">"Player"</default>
      <summary>Player name</summary>
      <description>
        Player name
      </description>
    </key>

    <key name="variant" type="s">
      <default l10n="messages">"Classic scopa"</default>
      <summary>Game variant</summary>
      <description>
        Game variant
      </description>
    </key>
	 
    <key name="speed" type="i">
      <default>3</default>
      <summary>Game speed</summary>
      <description>
        Game speed
      </description>
    </key>
	 
    <key name="cards" type="s">
      <default>"Napoletane"</default>
      <summary>Cards</summary>
      <description>
        Cards
      </description>
    </key>
	 
    <key name="background" type="s">
      <default>"/usr/share/scopy/data/images/tappeti/verde.png"</default>
      <summary>Background image</summary>
      <description>
        Background image
      </description>
    </key>
	 
    <key name="players" type="i">
      <default>2</default>
      <summary>Number of players</summary>
      <description>
        Number of players
      </description>
    </key>
	 
    <key name="show-value-on-cards" type="b">
      <default>false</default>
      <summary>Show values on cards</summary>
      <description>
        Show values on cards
      </description>
    </key>
	 
	 <key name="window-size" type="(ii)">
      <default>(800,600)</default>
      <summary>Window size</summary>
      <description>
        The main window size
      </description>
    </key>

  </schema>
</schemalist>
